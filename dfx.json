{
  "canisters": {
    "backend": {
      "type": "motoko",
      "main": "backend/main.mo",
      "declarations": {
        "output": "frontend/src/declarations",
        "bindings": [
          "js",
          "ts",
          "did"
        ]
      }
    },
    "frontend": {
      "type": "assets",
      "source": [
        "frontend/dist"
      ],
      "dependencies": [
        "backend"
      ]
    }
  },
  "defaults": {
    "build": {
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "playground": {
      "providers": ["https://icp0.io"],
      "type": "ephemeral"
    }
  },
  "version": 1
}